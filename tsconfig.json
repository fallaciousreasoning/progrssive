{
  "compilerOptions": {
    "target": "ES2019",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "noImplicitAny": false,
    "strict": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["components/*"],
      "@/api/*": ["api/*"],
      "@/actions/*": ["actions/*"],
      "@/services/*": ["services/*"],
      "@/model/*": ["model/*"],
      "@/selectors/*": ["selectors/*"],
      "@/hooks/*": ["hooks/*"],
      "@/types/*": ["types/*"],
      "@/styles/*": ["styles/*"],
      "@/pages/*": ["pages/*"],
      "@/worker/*": ["worker/*"]
    }
  },
  "include": [
    "src",
    "actions",
    "api",
    "components",
    "hooks",
    "selectors",
    "styles/theme.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}